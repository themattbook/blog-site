---
title: Blog
layout: 'base.njk'
---

<div class="inner-content">
	<div class="blog-list">
		<ul>
			{%- for post in collections.post | reverse -%}
			<li>
				{{ post.data.date | postDate }}:
				<a href="{{ post.url }}">{{ post.data.title }}</a>
			</li>
			{%- endfor -%}
		</ul>
	</div>
</div>
